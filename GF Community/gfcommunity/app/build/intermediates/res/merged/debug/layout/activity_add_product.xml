<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin"
    android:layout_marginTop="@dimen/margin"
    android:layout_marginLeft="@dimen/margin"
    android:layout_marginRight="@dimen/margin"
    android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent">

        <EditText
            android:id="@+id/product_name_edit_text"
            android:layout_height="wrap_content"
            android:hint="@string/product_name"
            android:inputType="text"
            android:layout_width="fill_parent">
        </EditText>

        <Button
            android:id="@+id/btnSelectProductImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select product image" />

        <ImageView
            android:id="@+id/viewImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/star_on"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/store_details_title"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store_details"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large">
        </TextView>
        <EditText
            android:id="@+id/store_edit_txt"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:inputType="text"
            android:layout_width="fill_parent">
        </EditText>
        <Spinner
            android:spinnerMode="dropdown"
            android:id="@+id/citiesSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/cities_array"
            android:hint="@string/city"
            android:prompt="@string/city"/>
        <EditText
            android:id="@+id/store_street_edit_txt"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:hint="@string/street"
            android:inputType="text">
        </EditText>
        <EditText
            android:id="@+id/store_house_no_edit_txt"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:hint="@string/house_no"
            android:inputType="number">
        </EditText>
        <!--<AutoCompleteTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address_edit_txt"
            android:hint="@string/store_address" />-->
        <EditText
            android:id="@+id/store_url_edit_txt"
            android:layout_height="wrap_content"
            android:hint="@string/store_url"
            android:inputType="textUri"
            android:layout_width="fill_parent">
        </EditText>
        <EditText
            android:id="@+id/store_phone_edit_txt"
            android:layout_height="wrap_content"
            android:hint="@string/store_phone"
            android:inputType="phone"
            android:layout_width="fill_parent">
        </EditText>
        <EditText
            android:id="@+id/product_comment_txt"
            android:layout_height="wrap_content"
            android:hint="@string/comment"
            android:inputType="text"
            android:layout_width="fill_parent">
        </EditText>
        <Button
            android:id="@+id/add_product_btn"
            android:layout_height="wrap_content"
            android:text="@string/add_product"
            android:layout_width="fill_parent">
        </Button>
    </LinearLayout>
</ScrollView>