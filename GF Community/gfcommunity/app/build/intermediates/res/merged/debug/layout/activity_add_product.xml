<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollViewAddProduct"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_basic"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        <FrameLayout
            android:id="@+id/product_img_frame"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/products"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

        </FrameLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnSelectProductImg"
            android:contentDescription="@string/add_product_image_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@android:color/white"
            android:src="@drawable/ic_add_a_photo_white_24dp"
            app:backgroundTint="@color/pinkAppColor"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginTop="-45dp"
            android:elevation="4dp"
            android:layout_gravity="right"
            />
        <LinearLayout
            android:id="@+id/product_details_layout"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginRight="@dimen/margin">

            <EditText
                android:id="@+id/product_name_edit_text"
                android:layout_height="wrap_content"
                android:hint="@string/product_name"
                android:inputType="text"
                android:layout_width="fill_parent">
            </EditText>

            <TextView
                android:id="@+id/store_details_title"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/store_details"
                android:textColor="@color/greenAppColor"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large">
            </TextView>
            <EditText
                android:id="@+id/store_edit_txt"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:inputType="text"
                android:layout_width="fill_parent">
            </EditText>

            <Spinner
                android:spinnerMode="dropdown"
                android:id="@+id/citiesSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/cities_array"
                android:hint="@string/city"
                android:prompt="@string/city"/>

            <EditText
                android:id="@+id/store_street_edit_txt"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:hint="@string/street"
                android:inputType="text">
            </EditText>
            <EditText
                android:id="@+id/store_house_no_edit_txt"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:hint="@string/house_no"
                android:inputType="number">
            </EditText>
            <!--<AutoCompleteTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address_edit_txt"
                android:hint="@string/store_address" />-->
            <EditText
                android:id="@+id/store_url_edit_txt"
                android:layout_height="wrap_content"
                android:hint="@string/store_url"
                android:inputType="textUri"
                android:layout_width="fill_parent">
            </EditText>
            <EditText
                android:id="@+id/store_phone_edit_txt"
                android:layout_height="wrap_content"
                android:hint="@string/store_phone"
                android:inputType="phone"
                android:ems="10"
                android:layout_width="fill_parent">
            </EditText>

            <EditText
                android:id="@+id/product_comment_txt"
                android:layout_height="wrap_content"
                android:hint="@string/comment"
                android:inputType="textMultiLine"
                android:layout_width="fill_parent">
            </EditText>

            <Button
                android:id="@+id/add_product_btn"
                android:layout_height="wrap_content"
                android:text="@string/add_product"
                android:layout_width="140dp"
                android:layout_gravity="center"
                android:background="@drawable/add_button_shape"
                android:layout_marginTop="@dimen/add_recipe_or_product_button_margin_top"
                android:textColor="@android:color/white">
            </Button>
        </LinearLayout>
    </LinearLayout>
</ScrollView>