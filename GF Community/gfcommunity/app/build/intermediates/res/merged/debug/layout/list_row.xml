<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/relative_layout_height_list_row"
    android:id="@+id/listRowCard"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin"
    android:layout_marginTop="@dimen/relative_layout_margin_list_row"
    android:layout_marginBottom="@dimen/relative_layout_margin_list_row"
    android:background="@drawable/custom_bg">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/row_img"
        android:layout_width="@dimen/circle_image_view_size"
        android:layout_height="@dimen/circle_image_view_size"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin"
        android:scaleType="centerCrop"
        android:contentDescription="Product image"/>

    <LinearLayout
        android:layout_toRightOf="@id/row_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/row_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            tools:text="Title"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/row_subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:text="Sub title"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/row_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:text="Text"
            android:ellipsize="end"
            android:singleLine="true"/>
    </LinearLayout>

</RelativeLayout>
